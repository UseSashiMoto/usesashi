{
    "compilerOptions": {
        "target": "es2019",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "sourceMap": true,
        "composite": false,
        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "inlineSources": false,
        "isolatedModules": true,
        "moduleResolution": "node",
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "preserveWatchOutput": true,
        "skipLibCheck": true,
        "sourceRoot": "/",
        "baseUrl": ".",
        "paths": {
            "@/helpers/*": ["src/helpers/*"],
            "@/src/*": ["src/*"]
        }
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}
